/* pages/hotGoods/hotGoods.wxss */
page {
  background:#f4f4f4
}

.brand-info .name {
  width: 100%;
  height: 278rpx;
  position: relative;
}

.brand-info .img {
  position: absolute;
  height: 278rpx;
  top:0;
  left: 0;
  width: 100%;
}
.brand-info .info-box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 278rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.brand-info .info{
  display: block;
}

.brand-info .txt {
  display: block;
  height: 40rpx;
  font-size: 37.5rpx;
  color: #fff;
}

.brand-info .line{
  margin: 0 auto;
  margin-top: 16rpx;
  display: block;
  height: 2rpx;
  width: 145rpx;
  background: #fff;
}

.sort {
  position: relative;
  background: #fff;
  width: 100%;
  height: 78rpx;
}

.sort-box{
  background: #fff;
  width: 100%;
  height: 78rpx;
  overflow: hidden;
  padding: 0 30rpx;
  align-items: center;
  border-bottom: 1px solid #d9d9d9;
  display: flex;
}

.sort-box .item{
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  flex: 1;
  color: #333;
  font-size: 30rpx;
}

.sort-box .item .txt{
  columns: #333333;
}


.sort-box .item.active .txt{
  color: #b4282d;
}