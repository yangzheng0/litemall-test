/**index.wxss**/
.search{
  height: 88rpx;
  width: 100%;
  padding: 0 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.search .van-icon-search {
  line-height: 59rpx;
}

.search .input {
  width: 690rpx;
  height: 56rpx;
  background: #ededed;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner {
  width: 750rpx;
  height: 417rpx;
}

.banner image {
  width: 100%;
  height: 417rpx;
}

.search .txt {
  height: 42rpx;
  line-height: 42rpx;
  color: #666;
  padding-left: 10rpx;
  font-size: 30rpx;
}

.m-menu {
  background: #fff;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding-top: 25rpx;
}

.m-menu .item {
  width: 150rpx;
  height: 126rpx;
}

.m-menu image {
  display: block;
  width: 58rpx;
  height: 58rpx;
  margin: 0 auto;
  margin-bottom: 12rpx;
}

.m-menu text{
  display: block;
  font-size: 24rpx;
  text-align: center;
  line-height: 1;
  color: #333;
  margin: 0 auto;
}

.a-select {
  width: 750rpx;
  height: auto;
  background: #fff;
  overflow: hidden;
  color: #333;
  margin-top: 20rpx;
}

.a-select .h{
  display: flex;
  flex-flow: row nowrap;
  height: 130rpx;
  align-items: center;
  justify-content: center;
  height: 130rpx;
}

.a-select .h .txt {
  padding-right: 30rpx;
  font-size: 33rpx;
  line-height: 36rpx;
  background-size: 16.656rpx 27rpx;
  display: inline-block;
  height: 36rpx;
}

.a-coupon {
  width: 750rpx;
  height: auto;
  overflow: hidden;
}

.a-coupon .b .item{
  position: relative;
  height: 200rpx;
  width: 700rpx;
  background: linear-gradient(to right, #cfa568,#e3bf79);
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}

.a-coupon .b .tag{
  height: 32rpx;
  background-color: #a48143;
  color: #fff;
  position: absolute;
  padding-left: 16rpx;
  padding-right: 16rpx;
  left: 20rpx;
  top: 20rpx;
  font-size: 20rpx;
  text-align: center;
  display: flex;
  line-height: 32rpx;
}

.a-coupon .b .content{
  display: flex;
  margin-top: 24rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  flex-direction: row;
}