/* pages/search/search.wxss */
page {
  min-height: 100%;
  background-color: #f4f4f4;
}

.container {
  min-height: 100%;
  background-color: #f4f4f4;
}
.search-header{
  /* margin-top: 30rpx; */
  width: 100%;
  height: 80rpx;
  display: flex;
  background: #fff;
}

.search-header .input-box{
  margin-left: 25rpx;
  height: 60rpx;
  /* justify-content: center; */
  /* line-height: 60rpx; */
  flex: 1;
  background: #f4f4f4;
}

.search-header .input-box van-icon{
  margin-left: 20rpx;
  height: 60rpx;
  width: 30rpx;
}

.search-header .input-box .keyword{
  position: absolute;
  top: 0;
  left: 50rpx;
  width: 450rpx;
  height: 59rpx;
  padding-left: 40rpx;
}
.search-header .del {
  position: absolute;
  /* top: 3rpx; */
  right: 150rpx;
  width: 53rpx;
  height: 53rpx;
  z-index: 10;
}

.search-header .right{
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.no-search {
  height: auto;
  overflow: hidden;
  /* margin-top: 91rpx; */
}

.search-keywords {
  background: #fff;
  width: 750rpx;
  height: auto;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.search-keywords .h {
  padding: 0 31.25rpx;
  height: 93rpx;
  line-height: 93rpx;
  width: 100%;
  color: #999;
  font-size: 29rpx;
}

.search-keywords .title {
  display: block;
  width: 120rpx;
  float: left;
}

.search-keywords .icon {
  margin-top: 19rpx;
  float: right;
  display: block;
  margin-left: 511rpx;
  height: 55rpx;
  width: 55rpx;
}

.search-keywords .b {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  padding-left: 31.25rpx;
}

.search-keywords .item {
  display: inline-block;
  width: auto;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 15rpx;
  border: 1px solid #999;
  margin: 0 31.25rpx 31.25rpx 0;
  font-size: 24rpx;
  color: #333;
}

.search-keywords .item.active {
  color: #b4282d;
  border: 1px solid #b4282d;
}

.shelper-list {
  height: 80rpx;
  background: #fff;

}

.shelper-list .item{
  font-size: 25rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.search-result{
  width: 100%;
  height: auto;
}

.search-result .sort .sort-box{
  display: flex;
  width: 100%;
  height: 78rpx;
  background: #fff;
  border-bottom: 1px solid #d9d9d9;
}

.search-result .sort .sort-box .item{
  flex: 1;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
}

.search-result .sort .sort-box .txt{
  color: #333;
}

.search-result .sort .sort-box .item.active .txt{
  color: #b4282d;
}

.sort-box-category {
  width: 100%;
  height: auto;
  background: #fff;
  padding: 40rpx 40rpx 0 0;
  overflow: hidden;
  border-bottom: 1px solid #d9d9d9;
}

.sort-box-category .item {
  border: 1px solid #666;
  height: 54rpx;
  line-height: 54rpx;
  float: left;
  padding: 0 16rpx;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  margin: 0 0 40rpx 40rpx;
}

.sort-box-category .item.active{
  color: #b4282d;
  border: 1px solid #b4282d;
}

.cate-item {
  /* margin-top: 175rpx; */
  height: auto;
  overflow: hidden;
}
.cate-item .h {
  height: 145rpx;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.cate-item .h .name {
  display: block;
  height: 35rpx;
  margin-bottom: 18rpx;
  font-size: 30rpx;
  color: #333;
}

.cate-item .b {
  width: 750rpx;
  padding: 0 6.25rpx;
  height: auto;
  overflow: hidden;
}

.cate-item .list-filter {
  height: 80rpx;
  width: 100%;
  background: #fff;
  margin-bottom: 6.25rpx;
}

.cate-item .b .item {
  float: left;
  background: #fff;
  width: 365rpx;
  margin-bottom: 6.25rpx;
  padding-bottom: 33.333rpx;
  height: auto;
  overflow: hidden;
  text-align: center;
}
.cate-item .h .desc {
  display: block;
  height: 24rpx;
  font-size: 24rpx;
  color: #999;
}

.cate-item .item .img {
  width: 302rpx;
  height: 302rpx;
}

.cate-item .item .name {
  display: block;
  width: 365.625rpx;
  height: 35rpx;
  margin: 11.5rpx 0 22rpx 0;
  text-align: center;
  overflow: hidden;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #333;
}

.cate-item .item .price {
  display: block;
  width: 365.625rpx;
  height: 30rpx;
  text-align: center;
  font-size: 30rpx;
  color: #b4282d;
}

.search-result-empty {
  width: 100%;
  height: 100%;
  padding-top: 600rpx;
}

.search-result-empty .text {
  display: block;
  width: 100%;
  height: 40rpx;
  font-size: 28rpx;
  text-align: center;
  color: #999;
}